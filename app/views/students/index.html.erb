<p><%= notice %></p>
<h1>Listing all Students</h1>
<%= link_to "New Student", new_student_path %>

    <table>
        <thead>
            <tr>
                <th>First name </th>
                <th>Last name </th>
                <th>Email </th>
                <th colspan="3">Actions</th>

            </tr>
        </thead>
        <tbody>
            <% @students.each do |student| %>
            <tr>
                <td><%= student.first_name %></td>
                <td><%= student.last_name %></td>
                <td><%= student.email %></td>
                <td><%= link_to "View Details", student %></td>
                <td><%= link_to "Update", edit_student_path(student) %></td>
                <td><%= link_to "Delete", student, method: :delete, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}%></td>
            </tr>
            <%end%>
        </tbody>

    </table>
